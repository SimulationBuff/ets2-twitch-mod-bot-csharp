<Application x:Class="ETS2TwitchModBot.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <!--
    App.xaml - WPF Application entrypoint

    Notes:
    - This file declares the application class and points StartupUri at MainWindow.xaml.
    - Create `MainWindow.xaml` and its code-behind `MainWindow.xaml.cs` in the `ETS2TwitchModBot.App` project.
      The main window should implement the UI you requested:
        - Start / Stop button
        - Append-only logs panel
        - Tabs or sections for Mods and DLCs
        - Settings panel to edit non-secret appsettings and allow loading tokens from environment

    - For a more advanced startup (dependency injection, configuration, logging) implement an App.xaml.cs
      that builds a Host (Microsoft.Extensions.Hosting) and configures services, then resolves and shows the MainWindow.
  -->

  <Application.Resources>
    <ResourceDictionary>

      <!-- Basic theme resources and defaults -->
      <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF7F7F8" />
      <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFFFF" />
      <SolidColorBrush x:Key="AccentBrush" Color="#FF2D89EF" />

      <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="Black" />
      </Style>

      <Style TargetType="Button">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="MinWidth" Value="80" />
      </Style>

      <Style TargetType="TabControl">
        <Setter Property="Margin" Value="8" />
      </Style>

      <Style TargetType="TextBox">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
      </Style>

      <!-- Simple DataTemplate for ModInfo display (expected to match the Core ModInfo shape) -->
      <DataTemplate x:Key="ModInfoTemplate">
        <Border Padding="6" Background="{StaticResource PanelBackgroundBrush}" Margin="4" CornerRadius="4">
          <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
            <TextBlock Text="{Binding Filename}" FontStyle="Italic" FontSize="11" Foreground="Gray" />
          </StackPanel>
        </Border>
      </DataTemplate>

    </ResourceDictionary>
  </Application.Resources>
</Application>
